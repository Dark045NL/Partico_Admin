@model DataAccessLayer.Models.Product

@{
    ViewData["Title"] = "Verwijder product";
}

<h1>Weet je zeker dat je dit product wilt verwijderen?</h1>

<div>
    <h4>Naam: @Model.Name</h4>
    <p>@Model.Description</p>
    <p><strong>Prijs:</strong> €@Model.Price</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Verwijder</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleer</a>
</form>
