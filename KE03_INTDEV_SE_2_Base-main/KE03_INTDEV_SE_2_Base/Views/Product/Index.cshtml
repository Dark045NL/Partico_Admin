@model IEnumerable<DataAccessLayer.Models.Product>

@{
    ViewData["Title"] = "Producten";
}

<h1>Producten</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">➕ Nieuw product</a>
</p>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Naam</th>
            <th>Beschrijving</th>
            <th>Prijs</th>
            <th>Actief</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>€@item.Price</td>
                <td>@(item.Active ? "✅" : "❌")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">✏️ Bewerken</a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">🔍 Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">🗑️ Verwijder</a>
                </td>
            </tr>
        }
    </tbody>
</table>
