@model DataAccessLayer.Models.Product
@{
    ViewData["Title"] = "Details";
}
<h1>Details Product</h1>
<dl class="row">
    <dt class="col-sm-2">Naam</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Beschrijving</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Prijs</dt>
    <dd class="col-sm-10">€ @Model.Price</dd>
</dl>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Terug</a>
</div>
