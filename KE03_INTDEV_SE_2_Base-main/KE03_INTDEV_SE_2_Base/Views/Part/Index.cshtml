@model IEnumerable<DataAccessLayer.Models.Part>

@{
    ViewData["Title"] = "Onderdelen";
}

<h1 class="mb-4">🔩 Onderdelenbeheer</h1>

<a class="btn btn-success mb-3" asp-action="Create">➕ Nieuw onderdeel</a>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Naam</th>
            <th>Beschrijving</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">✏️ Bewerken</a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">🔍 Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">🗑️ Verwijder</a>
                </td>
            </tr>
        }
    </tbody>
</table>
