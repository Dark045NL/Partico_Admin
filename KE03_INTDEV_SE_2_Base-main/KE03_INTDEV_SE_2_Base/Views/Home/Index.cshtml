@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Welkom, @User.Identity.Name 👋</h2>
    </div>

    <div class="alert alert-primary">
        <h5 class="alert-heading">Partico_Admin – Beheerdersportaal voor Matrix Inc.</h5>
        <p>
            Beheer producten, klanten, orders en onderdelen vanuit één centrale omgeving.
            Deze webapplicatie is ontworpen voor het back-office team van Matrix Inc.
        </p>
    </div>

    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">📦 Producten</h5>
                    <p class="card-text">Bekijk en beheer alle productgegevens.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Ga naar producten</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">👥 Klanten</h5>
                    <p class="card-text">Beheer klantinformatie en -statussen.</p>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Ga naar klanten</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🛒 Orders</h5>
                    <p class="card-text">Bekijk geplaatste bestellingen en orderdetails.</p>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-primary">Ga naar orders</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🔩 Onderdelen</h5>
                    <p class="card-text">Beheer technische componenten en onderdelen.</p>
                    <a asp-controller="Part" asp-action="Index" class="btn btn-primary">Ga naar onderdelen</a>
                </div>
            </div>
        </div>
    </div>
</div>
