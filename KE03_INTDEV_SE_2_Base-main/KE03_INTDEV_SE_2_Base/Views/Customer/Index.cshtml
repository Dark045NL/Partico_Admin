@model IEnumerable<DataAccessLayer.Models.Customer>

@{
    ViewData["Title"] = "Klanten";
}

<h1 class="mb-4">👥 Klantenbeheer</h1>

<a class="btn btn-primary mb-3" asp-action="Create">➕ Nieuwe klant</a>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Naam</th>
            <th>Adres</th>
            <th>Status</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>
                    @if (item.Active)
                    {
                        <span class="badge bg-success">Actief</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactief</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">✏️ Bewerken</a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">🔍 Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">🗑️ Verwijder</a>
                </td>
            </tr>
        }
    </tbody>
</table>
