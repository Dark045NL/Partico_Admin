@model IEnumerable<DataAccessLayer.Models.Order>

@{
    ViewData["Title"] = "Bestellingen";
}

<h1 class="mb-4">🧾 Bestellingen</h1>

<a class="btn btn-success mb-3" asp-action="Create">➕ Nieuwe bestelling</a>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Datum</th>
            <th>Klant</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderDate.ToShortDateString()</td>
                <td>@item.Customer?.Name</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">✏️ Bewerken</a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">🔍 Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">🗑️ Verwijder</a>
                </td>
            </tr>
        }
    </tbody>
</table>
