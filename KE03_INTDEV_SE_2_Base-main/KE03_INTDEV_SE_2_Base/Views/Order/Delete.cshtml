@model DataAccessLayer.Models.Order
@{
    ViewData["Title"] = "Verwijder bestelling";
}
<h1>Bestelling verwijderen</h1>
<h4>Weet je zeker dat je deze bestelling wilt verwijderen?</h4>
<dl class="row">
    <dt class="col-sm-2">Datum</dt>
    <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Klant</dt>
    <dd class="col-sm-10">@Model.Customer.Name</dd>
</dl>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Verwijder" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Annuleer</a>
</form>
