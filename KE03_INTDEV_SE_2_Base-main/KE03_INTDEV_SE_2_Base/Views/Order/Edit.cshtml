@model DataAccessLayer.Models.Order
@{
    ViewData["Title"] = "Bewerk bestelling";
}

<h1>Bestelling bewerken</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="OrderDate" class="form-label"></label>
                <input asp-for="OrderDate" type="date" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CustomerId" class="form-label">Klant</label>
                <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "Id", "Name"))">
                    <option value="">-- Selecteer klant --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Opslaan</button>
            <a asp-action="Index" class="btn btn-secondary">Annuleer</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
