@model DataAccessLayer.Models.Order
@{
    ViewData["Title"] = "Nieuwe bestelling";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="OrderDate"></label>
        <input asp-for="OrderDate" type="date" class="form-control" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerId">Klant</label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "Id", "Name"))"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    <input type="submit" value="Opslaan" class="btn btn-primary" />
</form>
<div><a asp-action="Index">Terug</a></div>
